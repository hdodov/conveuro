{
  "manifest_version": 2,
  "name": "Conveuro",
  "version": "1.0.0",

  "author": "Hristiyan Dodov",
  "description": "Instantly convert currencies with a simple text selection.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "web_accessible_resources": [
    "js/*",
    "img/*",
    "css/*"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "https://fixer.io/*"
  ],

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "css": [
        "css/main.css"
      ],
      "js": [
        "js/content.js"
      ],
      "matches": [
        "file:///*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}